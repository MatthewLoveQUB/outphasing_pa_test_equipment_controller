<Window
    x:Class="outphasing_pa_test_equipment_controller.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:outphasing_pa_test_equipment_controller"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Outphasing Test Equipment Controller"
    Width="1600"
    Height="900"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="25" />
        </Grid.RowDefinitions>
        <!--  Grid for VISA connection control  -->
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
        </Grid>
        <!--  Controls for each device  -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <!--  6624A  -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="16*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <!--  Controller Header  -->
                <TextBlock
                    Grid.Row="0"
                    VerticalAlignment="Center"
                    FontSize="24"
                    Text="HP 6624A PSU"
                    TextAlignment="Center" />
                <!--  Connection  -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="4*" />
                    </Grid.ColumnDefinitions>
                    <Button
                        x:Name="PsuConnectionButton"
                        Grid.Column="0"
                        Click="PsuConnectionButton_Click"
                        Content="Connect" />
                    <TextBox
                        x:Name="PsuConnectionStatus"
                        Grid.Column="1"
                        HorizontalContentAlignment="Left"
                        VerticalContentAlignment="Center"
                        IsReadOnly="True" />
                </Grid>
                <!--  The actual controls  -->
                <Grid Grid.Row="2">
                    <Grid.RowDefinitions>
                        <!--  A row per channel plus general system status  -->
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <local:HP6624AChannelController
                        x:Name="PsuChannel1"
                        Grid.Row="0"
                        Channel="1" />
                    <local:HP6624AChannelController
                        x:Name="PsuChannel2"
                        Grid.Row="1"
                        Channel="2" />
                    <local:HP6624AChannelController
                        x:Name="PsuChannel3"
                        Grid.Row="2"
                        Channel="3" />
                    <local:HP6624AChannelController
                        x:Name="PsuChannel4"
                        Grid.Row="3"
                        Channel="4" />

                </Grid>
                <!--  The debug line  -->
                <local:VisaDebugger x:Name="PsuDebugger" Grid.Row="3" />
            </Grid>
            <!--  RSA3408A  -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="16*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <!--  Controller Header  -->
                <TextBlock
                    Grid.Row="0"
                    VerticalAlignment="Center"
                    FontSize="24"
                    Text="3408A"
                    TextAlignment="Center" />
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="4*" />
                    </Grid.ColumnDefinitions>
                    <Button
                        x:Name="SpectrumAnalyzerConnectionButton"
                        Grid.Column="0"
                        Click="SpectrumAnalyzerConnectionButton_Click"
                        Content="Connect" />
                    <TextBox
                        x:Name="SpectrumAnalyzerConnectionStatus"
                        Grid.Column="1"
                        HorizontalContentAlignment="Left"
                        VerticalContentAlignment="Center"
                        IsReadOnly="True" />
                </Grid>
                <!--  The actual controls  -->
                <Grid Grid.Row="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                </Grid>
                <!--  Debug  -->
                <local:VisaDebugger x:Name="Rsa3408ADebugger" Grid.Row="3" />
            </Grid>
            <!--  R&S SMU200A  -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="16*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <!--  Controller Header  -->
                <TextBlock
                    Grid.Row="0"
                    VerticalAlignment="Center"
                    FontSize="24"
                    Text="R&amp;S SMU200A"
                    TextAlignment="Center" />
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="4*" />
                    </Grid.ColumnDefinitions>
                    <Button
                        x:Name="Smu200AConnectionButton"
                        Grid.Column="0"
                        Click="Smu200AConnectionButton_Click"
                        Content="Connect" />
                    <TextBox
                        x:Name="SMU200AConnectionStatus"
                        Grid.Column="1"
                        HorizontalContentAlignment="Left"
                        VerticalContentAlignment="Center"
                        IsReadOnly="True" />
                </Grid>
                <!--  The actual controls  -->
                <Grid Grid.Row="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                </Grid>
                <!--  Debug  -->
                <local:VisaDebugger x:Name="Smu200ADebugger" Grid.Row="3" />
            </Grid>
            <!--  E8257D  -->
            <Grid Grid.Column="3">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="16*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <!--  Controller Header  -->
                <TextBlock
                    Grid.Row="0"
                    VerticalAlignment="Center"
                    FontSize="24"
                    Text="E8257D"
                    TextAlignment="Center" />
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="4*" />
                    </Grid.ColumnDefinitions>
                    <Button
                        x:Name="E8257DConnectionButton"
                        Grid.Column="0"
                        Click="E8257DConnectionButton_Click"
                        Content="Connect" />
                    <TextBox
                        x:Name="E8257DConnectionStatus"
                        Grid.Column="1"
                        HorizontalContentAlignment="Left"
                        VerticalContentAlignment="Center"
                        IsReadOnly="True" />
                </Grid>
                <!--  The actual controls  -->
                <Grid Grid.Row="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                </Grid>
                <!--  Debug  -->
                <local:VisaDebugger x:Name="E8257DDebugger" Grid.Row="3" />
            </Grid>
        </Grid>
        <!--  Sweep Controls  -->
        <Grid Grid.Row="1" />
        <!--  Status bar  -->
        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock x:Name="StatusTextBlock" />
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
